<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Today's Tickets</title>
    <link rel="stylesheet" href="/static/styles/global.css">
</head>

<body>
    <!-- Navigation -->
    <nav>
        <ul>
            <li><a href="/admin">Home</a></li>
            <li><a href="/admin/students.php">Manage Students</a></li>
            <li><a href="/admin/validate.php">Validate Tickets</a></li>
            <li><a href="/admin/stops.php">Manage Bus Stops</a></li>
            <li><a href="/admin/departments.php">Manage Departments</a></li>
            <li><a href="/admin/tickets/purchased.php">Tickets Purchased</a></li>
            <li><a href="/admin/tickets/regular.php">Regular Tickets</a></li>
            <li><a href="/logout.php" class="nav-link">Logout</a></li>
        </ul>
    </nav>

    <!-- Main Content -->
    <main class="admin-content">
        <section class="admin-section">
            <h2 class="section-title">Today's Tickets</h2>

            <!-- Tickets Table -->
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Sl No</th>
                        <th>Ticket ID</th>
                        <th>Place</th>
                        <th>From</th>
                        <th>To</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in passes %}
                    <tr>
                        <td>{{loop.index}}</td>
                        <td>
                            <a href="/admin/validate.php?ticket-id={{row["UKey"]}}" class="link-ticket">{{row["UKey"]}}</a>
                        </td>
                        <td>{{row["FromPlace"]}}</td>
                        <td>{{row["fromtime"]}}</td>
                        <td>{{row["totime"]}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
    </main>
</body>

</html>
